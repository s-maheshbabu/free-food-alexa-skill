{
    "type": "APL",
    "version": "1.5",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.2.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "gameResultsDataSource"
        ],
        "items": [
            {
                "type": "Container",
                "height": "100vh",
                "width": "100vw",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${gameResultsDataSource.isWon ? 'https://imgix.bustle.com/lovelace/uploads/1053/4e05e210-2291-0133-76ea-0aecee5a8273.gif' : 'https://media1.giphy.com/media/KuJesxZSpHoXu/giphy.gif'}"
                    },
                    {
                        "type": "Container",
                        "width": "70%",
                        "height": "100%",
                        "items": [
                            {
                                "type": "AlexaImage",
                                "when": "${gameResultsDataSource.isWon}",
                                "imageSource": "https://invalid.jpg",
                                "imageWidth": "100%",
                                "imageHeight": "100%"
                            },
                            {
                                "type": "AlexaImage",
                                "when": "${!gameResultsDataSource.isWon}",
                                "imageSource": "https://invalid.jpg",
                                "imageWidth": "100%",
                                "imageHeight": "100%"
                            }
                        ]
                    },
                    {
                        "type": "Container",
                        "width": "30%",
                        "height": "100%",
                        "position": "absolute",
                        "right": "0",
                        "item": [
                            {
                                "type": "Container",
                                "height": "20%",
                                "items": [
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "textAlignVertical": "center",
                                        "textAlign": "center",
                                        "text": "Summary"
                                    }
                                ]
                            },
                            {
                                "type": "Container",
                                "height": "20%",
                                "item": [
                                    {
                                        "type": "Image",
                                        "width": "${viewport.width/15}",
                                        "height": "100%",
                                        "source": "https://smartypants-alexa-skill.s3.amazonaws.com/red-circle.png",
                                        "alignSelf": "start"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "maxWidth": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "${gameResultsDataSource.incorrectAnswers}"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "left": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "Incorrect"
                                    }
                                ],
                                "direction": "column"
                            },
                            {
                                "type": "Container",
                                "height": "20%",
                                "item": [
                                    {
                                        "type": "Image",
                                        "width": "${viewport.width/15}",
                                        "height": "100%",
                                        "source": "https://smartypants-alexa-skill.s3.amazonaws.com/green-circle.png",
                                        "alignSelf": "start"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "maxWidth": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "${gameResultsDataSource.score}"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "left": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "Correct"
                                    }
                                ],
                                "direction": "column"
                            },
                            {
                                "type": "Container",
                                "height": "20%",
                                "item": [
                                    {
                                        "type": "Image",
                                        "width": "${viewport.width/15}",
                                        "height": "100%",
                                        "source": "https://smartypants-alexa-skill.s3.amazonaws.com/orange-circle.png",
                                        "alignSelf": "start"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "maxWidth": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "${gameResultsDataSource.skippedAnswers}"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "left": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "Skipped"
                                    }
                                ],
                                "direction": "column"
                            },
                            {
                                "type": "Container",
                                "height": "20%",
                                "justifyContent": "center",
                                "direction": "row",
                                "item": {
                                    "type": "AlexaButton",
                                    "buttonText": "Play Again",
                                    "buttonStyle": "ingress",
                                    "touchForward": true,
                                    "primaryAction": {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "${gameResultsDataSource.newGameEventName}"
                                        ]
                                    },
                                    "onMount": {
                                        "type": "AnimateItem",
                                        "easing": "ease-in-out",
                                        "duration": 500,
                                        "repeatCount": 3,
                                        "repeatMode": "reverse",
                                        "value": [
                                            {
                                                "property": "transform",
                                                "from": [
                                                    {
                                                        "translateY": 0
                                                    }
                                                ],
                                                "to": [
                                                    {
                                                        "translateY": "${viewport.height*0.2/5}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "layouts": {},
    "graphics": {},
    "styles": {}
}