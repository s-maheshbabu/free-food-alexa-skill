{
    "type": "APL",
    "version": "1.5",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.2.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "questionResultsDataSource"
        ],
        "items": [
            {
                "type": "Container",
                "height": "100vh",
                "width": "100vw",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "videoAutoPlay": true,
                        "backgroundVideoSource": "https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4",
                        "backgroundColor": "white",
                        "videoAudioTrack": "none"
                    },
                    {
                        "type": "Container",
                        "width": "70%",
                        "height": "100%",
                        "items": [
                            {
                                "type": "AlexaProgressBarRadial",
                                "progressValue": "${questionResultsDataSource.sessionAttributes.currentQuestionIndex + 1}",
                                "totalValue": "${questionResultsDataSource.totalNumberOfQuestions}",
                                "progressFillColor": "green",
                                "theme": "light",
                                "position": "absolute"
                            },
                            {
                                "type": "Text",
                                "height": "100%",
                                "paddingLeft": "@spacingSmall",
                                "paddingRight": "@spacingSmall",
                                "alignSelf": "center",
                                "textAlignVertical": "center",
                                "textAlign": "center",
                                "text": "${questionResultsDataSource.isCorrect ? 'Correct' : 'Sorry'}",
                                "fontSize": "100"
                            }
                        ]
                    },
                    {
                        "type": "Container",
                        "width": "30%",
                        "height": "100%",
                        "position": "absolute",
                        "right": "0",
                        "item": [
                            {
                                "type": "Container",
                                "height": "20%"
                            },
                            {
                                "type": "Container",
                                "height": "20%",
                                "item": [
                                    {
                                        "type": "Image",
                                        "width": "${viewport.width/15}",
                                        "height": "100%",
                                        "source": "https://smartypants-alexa-skill.s3.amazonaws.com/red-circle.png",
                                        "alignSelf": "start"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "maxWidth": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "${questionResultsDataSource.sessionAttributes.incorrectAnswers}"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "left": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "Incorrect"
                                    }
                                ],
                                "direction": "column"
                            },
                            {
                                "type": "Container",
                                "height": "20%",
                                "item": [
                                    {
                                        "type": "Image",
                                        "width": "${viewport.width/15}",
                                        "height": "100%",
                                        "source": "https://smartypants-alexa-skill.s3.amazonaws.com/green-circle.png",
                                        "alignSelf": "start"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "maxWidth": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "${questionResultsDataSource.sessionAttributes.score}"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "left": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "Correct"
                                    }
                                ],
                                "direction": "column"
                            },
                            {
                                "type": "Container",
                                "height": "20%",
                                "item": [
                                    {
                                        "type": "Image",
                                        "width": "${viewport.width/15}",
                                        "height": "100%",
                                        "source": "https://smartypants-alexa-skill.s3.amazonaws.com/orange-circle.png",
                                        "alignSelf": "start"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "maxWidth": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "${questionResultsDataSource.sessionAttributes.skippedAnswers}"
                                    },
                                    {
                                        "type": "Text",
                                        "height": "100%",
                                        "left": "${viewport.width/15}",
                                        "paddingLeft": "@spacingSmall",
                                        "paddingRight": "@spacingSmall",
                                        "position": "absolute",
                                        "alignSelf": "start",
                                        "textAlignVertical": "center",
                                        "text": "Skipped"
                                    }
                                ],
                                "direction": "column"
                            },
                            {
                                "type": "Container",
                                "height": "20%",
                                "item": {
                                    "type": "AlexaButton",
                                    "buttonText": "Next Question",
                                    "buttonStyle": "ingress",
                                    "touchForward": true,
                                    "position": "absolute",
                                    "bottom": "0",
                                    "right": "0",
                                    "primaryAction": {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "${questionResultsDataSource.nextQuestionUserEventName}",
                                            "${questionResultsDataSource.sessionAttributes}"
                                        ]
                                    },
                                    "onMount": {
                                        "type": "AnimateItem",
                                        "easing": "ease-in-out",
                                        "duration": 100,
                                        "repeatCount": 15,
                                        "repeatMode": "reverse",
                                        "value": [
                                            {
                                                "property": "transform",
                                                "from": [
                                                    {
                                                        "translateX": 0
                                                    },
                                                    {
                                                        "rotate": 0
                                                    }
                                                ],
                                                "to": [
                                                    {
                                                        "translateX": -10
                                                    },
                                                    {
                                                        "rotate": 1
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "layouts": {},
    "graphics": {},
    "styles": {}
}