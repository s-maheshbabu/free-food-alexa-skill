{
    "type": "APL",
    "version": "1.4",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.2.0"
        }
    ],
    "resources": [],
    "styles": {},
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload",
            "questionAndAnswersDataSource"
        ],
        "items": [
            {
                "type": "AlexaTextList",
                "id": "answersList",
                "headerTitle": "${questionAndAnswersDataSource.textListData.title}",
                "headerBackButton": false,
                "headerAttributionImage": "${questionAndAnswersDataSource.textListData.logoUrl}",
                "backgroundImageSource": "${questionAndAnswersDataSource.textListData.backgroundImage.sources[0].url}",
                "backgroundBlur": false,
                "backgroundColorOverlay": true,
                "listItems": "${questionAndAnswersDataSource.textListData.listItems}",
                "hintText": "${questionAndAnswersDataSource.textListData.hintText}"
            }
        ]
    }
}